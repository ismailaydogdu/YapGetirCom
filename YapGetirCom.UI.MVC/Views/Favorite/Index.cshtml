
@model HomeVM


@{
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}





<!-- PAGE CONTETNT -->
<section class="gl-page-content-section">
    <div class="container mt-1">

        <!-- SEARCH -->

        <div class="widget clearfix">
            <!-- /widget heading -->
            <div class="widget-heading">
                <h3 class="widget-title text-dark">
                    Filtreleme
                </h3>
                <div class="clearfix"></div>
            </div>
            <div class="widget-body">
                <form class="row">
                    <div class="col-xs-12 col-md-4 col-lg-3">
                        <div class="form-group">
                            <input type="text" class="form-control" id="exampleInputKeyword" placeholder="Anahtar kelime">
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-4 col-lg-3">
                        <div class="form-group">
                            <input type="text" class="form-control" id="exampleInputText2" placeholder="Lokasyon">
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-4 col-lg-3">
                        <div class="form-group">
                            <select class="form-control" id="exampleSelect1">
                                <option>--Kategori--</option>
                                <option>Hamburger</option>
                                <option>Pizza</option>
                                <option>Makarna</option>
                                <option>Balık</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-4 col-lg-3"> <a href="food_results.html" class="btn theme-btn  btn-block">Filtrele</a> </div>
                </form>
            </div>
        </div>
        <!-- end:Pricing widget -->
        <div class="widget clearfix">
            <!-- /widget heading -->
            <div class="widget-heading">
                <h3 class="widget-title text-dark">
                    Ücret Aralığı
                </h3>
                <div class="clearfix"></div>
            </div>
            <div class="widget-body">
                <div class="range-slider m-b-10">
                    <span id="ex2CurrentSliderValLabel"> Filter by price:<span id="ex2SliderVal"><strong>35</strong></span>Lira</span>
                    <br>
                    <input id="ex2" type="text" data-slider-min="1" data-slider-max="100" data-slider-step="1" data-slider-value="35" />
                </div>
            </div>
        </div>
        <!-- end:Pricing widget -->
        <div class="search-result-wrapper">
            <div class="row">
                <!-- Each popular food item starts -->

                <h3 class="ml-1">Tarifler</h3>
                @foreach (Recipe item in Model.Recipes)
                {
                    <div class="col-xs-12 col-sm-4 col-md-4 food-item">

                        <div class="food-item-wrap">
                            <div class="figure-wrap bg-image" data-image-src="http://placehold.it/380x210">
                                <div class="distance"><i class="fa fa-pin"></i>@item.Category.CategoryName</div>
                                <div class="rating pull-left"> <i class="fa fa-star"></i> <i class="fa fa-star"></i> <i class="fa fa-star"></i> <i class="fa fa-star"></i> <i class="fa fa-star-o"></i> </div>
                                <div class="review pull-right"><a href="#">555 reviews</a> </div>
                            </div>
                            <div class="content">

                                <div class="product-name">@item.RecipeName</div>
                                <div class="price-btn-block"> <span class="price">@item.Price Lira</span> <a href="#" class="btn theme-btn-dash pull-right">Sipariş Ver</a> </div>
                            </div>
                        </div>
                    </div>
                }
            </div>


            <div class="row">

                <h3 class="ml-1">Restoranlar</h3>
                @foreach (Restaurant item in Model.Restaurants)
                {
                    <div class="col-xs-12 col-sm-4 col-md-4">
                        <div class="food-item-wrap">
                            <div class="figure-wrap bg-image" data-image-src="http://placehold.it/380x210">
                                <div class="distance"><i class="fa fa-pin"></i>@item.Category.CategoryName</div>
                                <div class="rating pull-left"> <i class="fa fa-star"></i> <i class="fa fa-star"></i> <i class="fa fa-star"></i> <i class="fa fa-star"></i> <i class="fa fa-star-o"></i> </div>
                                <div class="review pull-right"><a href="#">555 reviews</a> </div>
                            </div>
                            <div class="content">

                                <div class="product-name">@item.CompanyName</div>
                                <a href="#" class="btn theme-btn-dash pull-right mb-2">Restoranta Git</a>
                            </div>
                        </div>
                    </div>

                }

            </div>
            <!-- Each popular food item ends -->


            <div class="col-xs-12">
                <nav aria-label="...">
                    <ul class="pagination">
                        <li class="page-item disabled">
                            <a class="page-link" href="#" tabindex="-1" aria-label="Previous"> <span aria-hidden="true">&laquo;</span> <span class="sr-only">Previous</span> </a>
                        </li>
                        <li class="page-item active"> <a class="page-link" href="#">1 <span class="sr-only">(current)</span></a> </li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item"><a class="page-link" href="#">4</a></li>
                        <li class="page-item"><a class="page-link" href="#">5</a></li>
                        <li class="page-item">
                            <a class="page-link" href="#" aria-label="Next"> <span aria-hidden="true">&raquo;</span> <span class="sr-only">Next</span> </a>
                        </li>
                    </ul>
                </nav>
            </div>

        </div>
    </div>
    <!-- SEARCH END-->
</section>
