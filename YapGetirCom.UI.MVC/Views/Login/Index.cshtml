
@model YapGetirCom.Model.User

@{
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
@if (Session["user"] != null)
{
    <script>

  
            window.location = "/Home/Index";


    </script>
    
}

<div class="page-wrapper">
    <div class="breadcrumb">
        <div class="container">
            <div class="col-md-4">

                <h3>Giriş Yap</h3>
            </div>
            <div class="col-md-8">
                <h3>Üye Ol</h3>
            </div>
        </div>
    </div>
    <section class="contact-page inner-page">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <div class="row">
                        <div class="container">
                            <div class="card">

                                <div class="card-body">
                                    @using (Html.BeginForm("Login", "Login", FormMethod.Post))
                                    {

                                        <div class="form-group">
                                            <label for="disabledTextInput">E-Posta</label>

                                            @Html.TextBoxFor(x => x.EMail, new { @class = "form-control" })
                                        </div>
                                        <div class="form-group">
                                            <label for="disabledTextInput">Parola</label>
                                            @Html.TextBoxFor(x => x.Password, new { @class = "form-control" })
                                        </div>
                                        <div class="form-group">

                                            <input class="" type="checkbox">
                                            <label class="form-check-label">
                                                Beni Hatırla
                                            </label>

                                        </div>
                                        <div class="form-group">

                                            <a href="#">Parolamı Unuttum</a>

                                        </div>
                                        <button type="submit" class="btn theme-btn">Giriş Yap</button>

                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                <!-- REGISTER -->
                <div class="col-md-8">
                    <div class="widget">
                        <div class="widget-body">
                            @using (Html.BeginForm("Index", "Login", FormMethod.Post))
                            {
                                <div class="row">
                                    <div class="form-group col-sm-6">
                                        <label for="exampleInputEmail1">Ad</label>
                                        @Html.TextBoxFor(x => x.FirstName, new { placeholder = "Gizem", @class = "form-control" })

                                    </div>
                                    <div class="form-group col-sm-6">
                                        <label for="exampleInputEmail1">Soyad</label>
                                        @Html.TextBoxFor(x => x.LastName, new { placeholder = "İşeri", @class = "form-control" })
                                    </div>
                                    <div class="form-group col-sm-6">
                                        <label for="exampleInputEmail1">E-Posta</label>
                                        @Html.TextBoxFor(x => x.EMail, new { placeholder = "ad.soyad@mail.com", @class = "form-control" })
                                    </div>
                                    <div class="form-group col-sm-6">
                                        <label for="exampleInputEmail1">Bölge</label>
                                        @Html.TextBoxFor(x => x.Region, new { placeholder = "Bakırköy", @class = "form-control" })
                                    </div>
                                    <div class="form-group col-sm-6">
                                        <label for="exampleInputPassword1">Parola</label>
                                        @Html.TextBoxFor(x => x.Password, new { placeholder = "********", @class = "form-control" })
                                    </div>
                                    <div class="form-group col-sm-6">
                                        <label for="exampleTextarea">Doğum Tarihi</label>
                                        @Html.TextBoxFor(x => x.BirthDate, new { type = "date", @class = "form-control" })
                                    </div>




                                    @*//TODO: Parola tekrar kaldırıldı. Onun yerine göz koy parolayı gösterip gizlesin.*@
                                    @*<div class="form-group col-sm-6">
                                            <label for="exampleInputPassword1">Parola (Tekrar)</label>
                                            @Html.TextBoxFor(x => x., new { placeholder = "ad.soyad@mail.com", @class = "form-control" })
                                        </div>*@

                                </div>



                                @Html.DropDownListFor(x => x.UserTypeID, (IEnumerable<SelectListItem>)ViewBag.UserType, new { @class = "form-control" })


                                <div class="row">
                                    <div class="col-sm-4 mt-1 float-sm-right">
                                        <p>
                                            <button class="btn theme-btn float-sm-right">Üye Ol</button>
                                        </p>
                                    </div>
                                </div>
                            }
                        </div>
                        <!-- end: Widget -->
                    </div>
                    <!-- /REGISTER -->
                </div>
                <!-- WHY? -->

            </div>
        </div>
    </section>

</div>