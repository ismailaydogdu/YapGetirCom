}
<div class="page-wrapper">
    <div class="breadcrumb">
        <div class="container">
            <div class="col-md-4">

            <h3>Giriş Yap</h3>
            </div>
            <div class="col-md-8">
                <h3>Üye Ol</h3>
            </div>
        </div>
    </div>
    <section class="contact-page inner-page">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <div class="row">
                        <div class="container">
                            <div class="card">
                                
                                <div class="card-body">
                                    <form>

                                        <div class="form-group">
                                            <label for="disabledTextInput">E-Posta</label>
                                            <input type="text" class="form-control">
                                        </div>
                                        <div class="form-group">
                                            <label for="disabledTextInput">Parola</label>
                                            <input type="password" class="form-control">
                                        </div>
                                        <div class="form-group">

                                            <input class="" type="checkbox">
                                            <label class="form-check-label">
                                                Beni Hatırala
                                            </label>

                                        </div>
                                        <div class="form-group">

                                            <a href="#">Parolamı Unuttum</a>

                                        </div>
                                        <button type="submit" class="btn theme-btn">Giriş Yap</button>

                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                <!-- REGISTER -->
                <div class="col-md-8">
                    <div class="widget">
                        <div class="widget-body">
                            <form>
                                <div class="row">
                                    <div class="form-group col-sm-6">
                                        <label for="exampleInputEmail1">Ad</label>
                                        <input class="form-control" type="text" value="Artisanal kale" id="example-text-input">
                                    </div>
                                    <div class="form-group col-sm-6">
                                        <label for="exampleInputEmail1">Soyad</label>
                                        <input class="form-control" type="text" value="Artisanal kale" id="example-text-input-2">
                                    </div>
                                    <div class="form-group col-sm-6">
                                        <label for="exampleInputEmail1">E-Posta</label>
                                        <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email"> <small id="emailHelp" class="form-text text-muted">We"ll never share your email with anyone else.</small>
                                    </div>
                                    <div class="form-group col-sm-6">
                                        <label for="exampleInputEmail1">Bölge</label>
                                        <input class="form-control" type="tel" value="1-(555)-555-5555" id="example-tel-input-3"> <small class="form-text text-muted">We"ll never share your email with anyone else.</small>
                                    </div>
                                    <div class="form-group col-sm-6">
                                        <label for="exampleInputPassword1">Parola</label>
                                        <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
                                    </div>
                                    <div class="form-group col-sm-6">
                                        <label for="exampleInputPassword1">Parola (Tekrar)</label>
                                        <input type="password" class="form-control" id="exampleInputPassword2" placeholder="Password">
                                    </div>
                                    <div class="form-group col-sm-12">
                                        <label for="exampleTextarea">Doğum Tarihi</label>
                                        <input type="date" class="form-control">
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group col-sm-6">
                                        <div class="btn-group" data-toggle="buttons">
                                            <label class="btn btn-secondary">
                                                <input type="radio" name="options" id="option1" checked> Tedarikci
                                            </label>
                                            <label class="btn btn-secondary">
                                                <input type="radio" name="options" id="option2"> Restorant
                                            </label>
                                            <label class="btn btn-secondary">
                                                <input type="radio" name="options" id="option3"> Kullanıcı
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-4">
                                        <p> <a href="#" class="btn theme-btn">Üye Ol</a> </p>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <!-- end: Widget -->
                    </div>
                    <!-- /REGISTER -->
                </div>
                <!-- WHY? -->

            </div>
        </div>
    </section>
   
</div>